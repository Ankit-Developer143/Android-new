<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color1"
    tools:context=".updateemail">

    <EditText
        android:id="@+id/oldemail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@color/design_default_color_background"
        android:ems="10"
        android:hint="oldemail@gmail.com"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/oldemail"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:padding="10dp" />

    <EditText
        android:id="@+id/newemail"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="newemail@gmail.com"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <Button
        android:id="@+id/update"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/newemail"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="131dp"
        android:gravity="center_horizontal"
        android:text="Update"
        android:textSize="18sp"
        app:backgroundTint="@color/design_default_color_secondary_variant"
        app:cornerRadius="40dp" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="2dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/word2" />

    <TextView
        android:layout_width="197dp"
        android:layout_height="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="62dp"
        android:layout_marginBottom="630dp"
        android:paddingLeft="60dp"
        android:text="Quiz App"
        android:textColorHighlight="@color/design_default_color_error"
        android:textColorLink="@android:color/holo_green_light"
        android:textCursorDrawable="@drawable/ic_launcher_background"
        android:textSize="30sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/right_answer"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="489dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Correct Answer"
        android:inputType="textPersonName"
        android:paddingLeft="120dp"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/question_word"
        android:layout_width="226dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="80dp"
        android:layout_marginBottom="326dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="word"
        android:inputType="textPersonName"
        android:paddingLeft="70dp"
        android:textColor="@color/black"
        android:textColorHighlight="@color/design_default_color_error"
        android:textColorHint="@color/teal_700"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <EditText
        android:id="@+id/user_answer"
        android:layout_width="324dp"
        android:layout_height="58dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="47dp"
        android:layout_marginLeft="47dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="197dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Enter Your Word"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textColorHighlight="@color/design_default_color_error"
        android:textColorHint="@color/teal_700"
        android:textColorLink="@color/teal_700"
        android:textSize="24sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/change_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Change"
            android:textSize="18sp"
            app:backgroundTint="@color/design_default_color_error" />

        <Button
            android:id="@+id/check_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Check"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_green_light" />

        <Button
            android:id="@+id/show_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Show"
            android:textSize="18sp"
            app:backgroundTint="@android:color/holo_purple" />
    </LinearLayout>

</RelativeLayout>
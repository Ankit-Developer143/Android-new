<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vodeos_list">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_one"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:onClick="img_video_check"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/laptop" />

            <ImageView
                android:id="@+id/img_two"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:onClick="img_video_check"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/letter" />

            <ImageView
                android:id="@+id/img_three"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:onClick="img_video_check"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/coffee" />

            <ImageView
                android:id="@+id/img_four"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:onClick="img_video_check"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/coffeeandbook" />

            <ImageView
                android:id="@+id/img_five"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:onClick="img_video_check"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/bulb" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>